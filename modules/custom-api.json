{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Custom API",
        "description": "This is the place to add your own path endpoints"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url":"http://localhost:8080/exist/apps/cross-search"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/api/apps": {
            "get": {
                "summary": "Retrieve listing of editions available",
                "tags": [
                    "search"
                ],
                "operationId": "qapi:query-apps-available",
                "responses": {
                    "200":{
                        "description": "List of editions for this service",
                        "text/html": {
                            "schema": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/api/search/document": {
            "get": {
                "summary": "Retrieve documents matching search criteria",
                "tags": [
                    "search"
                ],
                "operationId": "qapi:query-document",
                "parameters": [
                    {
                        "name": "query",
                            "in": "query",
                            "description": "Query string",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "query-operator",
                            "in": "query",
                            "description": "Logical conjunction for text queries",
                            "schema": {
                                "type": "string",
                                "default": "or"
                            }
                    },
                    {
                        "name": "author",
                            "in": "query",
                            "description": "Author",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "author-operator",
                            "in": "query",
                            "description": "Logical conjunction for author queries",
                            "schema": {
                                "type": "string",
                                "default": "or"
                            }
                    },
                    {
                        "name": "title",
                            "in": "query",
                            "description": "Title",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "title-operator",
                            "in": "query",
                            "description": "Logical conjunction for title queries",
                            "schema": {
                                "type": "string",
                                "default": "or"
                            }
                    },
                    {
                        "name": "lang",
                            "in": "query",
                            "description": "Language",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "lang-operator",
                            "in": "query",
                            "description": "Logical conjunction for language queries",
                            "schema": {
                                "type": "string",
                                "default": "or"
                            }
                    },
                    {
                        "name": "facet-language",
                            "in": "query",
                            "description": "Language facet",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "facet-genre",
                            "in": "query",
                            "description": "Genre facet",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "facet-corpus",
                            "in": "query",
                            "description": "Corpus facet",
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                    },
                    {
                        "name": "sort",
                            "in": "query",
                            "description": "sort",
                            "schema": {
                                "type": "string",
                                "default": "title"
                            }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Version information about this service",
                        "content": {
                            "text/html": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}